<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimerForScreenTimeout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lighter_grey</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/MyTextviewStyle</item>
        <item name="cardViewStyle">@style/MyCardviewStyle</item>
    </style>

    <style name="MyTextviewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif</item>
        <item name="color">@color/black</item>
    </style>

    <style name="MyCardviewStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/lighter_grey</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

</resources>